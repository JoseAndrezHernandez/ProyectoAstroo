---
export interface Props {
    title:string;
    descripcion:string;
    link:string;
}
const {title, descripcion, link} = Astro.props;
---

<div class="container mx-auto my-10">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="p-6">
            <h3 class="text-2xl font -bold text-gray-800 mb-2">{title}</h3>
            <p class="text-gray-600 mb-4">{descripcion}</p>
            <div class="inline-flex items-center">
                <hr class="w-full h-px bg-gray-300 border-0 mb-4">
            </div>
            <a href={link} class="text-blue-500 hover:underline">Visita el enlace</a>
        </div>
    </div>
</div>
