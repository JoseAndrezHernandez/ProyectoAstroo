---

export interface Props {
    title: string;
    tech: string[];

}

const {title, tech} = Astro.props;
---

  <div class="container">
        <div class="card">
            <div class="card-content">
                <h2>{title}</h2>
                <p>
                <ul>{tech.map((t)=>(<li>{ t }</li>))}</ul>
            </p>
            </div>
        </div>
  </div>

  <style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 20px;
        box-sizing: border-box;
    }
    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        gap: 20px;
    }
    .card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: calc(20% - 20px);
        min-width: 250px;
        transition: transform 0.3s ease;
    }
    .card:hover {
        transform: translateY(-5px);
    }
    .card-content {
        padding: 16px;
    }
    .card-content h2 {
        margin-top: 0;
        margin-bottom: 10px;
        color: #333;
    }
    .card-content p {
        color: #666;
        line-height: 1.5;
    }
</style>